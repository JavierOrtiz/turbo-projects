<%= turbo_frame_tag 'selected_project' do %>
  <%= render 'layouts/modal', title: @project.title do %>
    <table class="table table-striped table-hover">
      <thead class="table-light">
      <tr>
        <th scope="col">Content</th>
        <th scope="col">Status</th>
        <th scope="col">Created at</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
        <%= render @project.tasks.not_subtasks.active %>
      </tbody>
    </table>
  <% end %>
<% end %>