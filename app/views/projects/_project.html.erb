<%= turbo_frame_tag project do %>
  <div class="card mb-3">
    <%= form_with model: project do %>
      <div class="card-header d-flex justify-content-between align-items-center">
        <%= turbo_frame_tag dom_id(project, "title_frame") do %>
          <%= link_to [:edit, project] do %>
            <h5 class="mb-3">
              <%= project.title %>
            </h5>
          <% end %>
        <% end %>
        <%= turbo_frame_tag dom_id(project, "status_frame") do %>
          <%= link_to [:edit, project] do %>
            <span class="badge text-bg-secondary"><%= project.status %></span>
          <% end %>
        <% end %>
      </div>
      <div class="card-body">
        <%= turbo_frame_tag dom_id(project, "description_frame") do %>
          <%= link_to [:edit, project] do %>
            <%= project.description %>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <div class="card-footer d-flex justify-content-between align-items-center">
      <div><%= project.tasks.active.count %> pending tasks</div>
      <div class="btn-group">
        <%= link_to 'Visit', project_path(project), class: 'btn btn-info btn-sm', data: { turbo_frame: 'selected_project' } %>
        <%= button_to "Delete", project_path(project), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-danger btn-sm" %>
      </div>
    </div>
  </div>
<% end %>